<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrm.attendance.mapper.ext.ExtAttendanceMapper">
    <resultMap id="AttendanceResultMap" type="com.hrm.attendance.model.AttendanceRecord">
        <id property="recordId" column="record_id"/>
        <result property="authUserId" column="auth_user_id"/>
        <result property="checkInTime" column="check_in_time"/>
        <result property="checkOutTime" column="check_out_time"/>
        <result property="recordDate" column="record_date"/>
    </resultMap>
    <select id="findTodayRecord" resultMap="AttendanceResultMap">
        SELECT * FROM attendance_records
        WHERE auth_user_id = #{authUserId}
        AND record_date = #{date}
    </select>
    <update id="updateCheckOutTime" parameterType="com.hrm.attendance.model.AttendanceRecord">
        UPDATE attendance_records SET
        check_out_time = #{checkOutTime}
        WHERE record_id = #{recordId}
        AND auth_user_id = #{authUserId}
    </update>

    <select id="findAllByAuthUserId" resultMap="AttendanceResultMap">
        SELECT * FROM attendance_records
        WHERE auth_user_id = #{authUserId}
        ORDER BY record_date DESC
    </select>
</mapper>